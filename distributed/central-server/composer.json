{
  "name": "obsidian/central-server",
  "description": "Central server for OBSIDIAN Distributed Neural Sound Engine",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "psr/http-message": "^2.0",
    "psr/container": "^2.0",
    "php-di/php-di": "^7.0",
    "monolog/monolog": "^3.4",
    "firebase/php-jwt": "^6.8",
    "guzzlehttp/guzzle": "^7.8",
    "ramsey/uuid": "^4.7",
    "vlucas/phpdotenv": "^5.5",
    "respect/validation": "^2.2",
    "phpmailer/phpmailer": "^6.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.4",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.40"
  },
  "autoload": {
    "psr-4": {
      "Obsidian\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Obsidian\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "test": "phpunit",
    "cs-fix": "php-cs-fixer fix",
    "analyze": "phpstan analyse src"
  }
}
